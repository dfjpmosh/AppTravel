@model IEnumerable<AppTravel.Core.BusinessModels.SearchHotelViewModel>
@{
    ViewData["Title"] = "AppTravel";
    List<SelectListItem> cities = (List<SelectListItem>)ViewBag.cities;
}

@using(Html.BeginForm())
{ 
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Hoteles</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.DropDownList("CityState", cities, "Selecciona una opción")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Buscar Destino" class="btn btn-primary" />
        </div>
    </div>
</div>
}